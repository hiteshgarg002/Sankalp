<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_users_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/no_dp_big" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_toRightOf="@+id/rel1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:- "/>

        <TextView
            android:textStyle="bold"
            android:text="Hitesh Garg"
            android:layout_toRightOf="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_users_name"/>

        <TextView
            android:layout_below="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tag_mobileno"
            android:text="Mobile No.:- "/>

        <TextView
            android:text="8982516236"
            android:textStyle="bold"
            android:id="@+id/all_users_mobileno"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tag_mobileno"
            android:layout_below="@+id/tag_name"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tag_joindate"
            android:text="Join Date:- "
            android:layout_below="@+id/tag_mobileno"/>

        <TextView
            android:layout_toRightOf="@+id/tag_joindate"
            android:layout_below="@+id/tag_mobileno"
            android:layout_width="wrap_content"
            android:text="2017-12-1"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/all_users_join_date"/>

    </RelativeLayout>

</RelativeLayout>