<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/no_dp_big" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_toRightOf="@+id/rel1"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_date"
            android:text="2017-05-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="10:20:55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/rel1">

        <TextView
            android:id="@+id/notification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hitesh Garg"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_notification_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/notification_name"
            android:text=" need your help!"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tag_notification_mobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_name"
            android:text="Mobile No:- "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/notification_mobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_notification_help"
            android:layout_toRightOf="@+id/tag_notification_mobileno"
            android:text="8982516236"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_notification_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_notification_mobileno"
            android:text="Location:-"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/notification_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_notification_mobileno"
            android:layout_toRightOf="@+id/tag_notification_mobileno"
            android:text="C-12, Shri Krishna Colony"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>